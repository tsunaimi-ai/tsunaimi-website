# Staging stage
FROM tsunaimi-website-frontend:latest

WORKDIR /app

# Set environment variables
ENV NODE_ENV=staging
ENV NEXT_PUBLIC_NODE_ENV=staging
ENV PORT=3001
ENV NEXT_PUBLIC_API_URL=https://staging.tsunaimi.ai

# Expose the correct port
EXPOSE 3001

# Start the application with staging environment and correct port
CMD ["sh", "-c", "NODE_ENV=staging NEXT_PUBLIC_NODE_ENV=staging PORT=3001 NEXT_PUBLIC_API_URL=https://staging.tsunaimi.ai node server.js"] 