# Production stage
FROM tsunaimi-website-frontend:latest

WORKDIR /app

# Set production environment variables
ENV NODE_ENV=production
ENV NEXT_PUBLIC_NODE_ENV=production
ENV PORT=3200
ENV NEXT_PUBLIC_API_URL=https://tsunaimi.ai

# Expose the port
EXPOSE 3200

# Start the application with production environment
CMD ["sh", "-c", "NODE_ENV=production NEXT_PUBLIC_NODE_ENV=production PORT=3200 NEXT_PUBLIC_API_URL=https://tsunaimi.ai node server.js"] 